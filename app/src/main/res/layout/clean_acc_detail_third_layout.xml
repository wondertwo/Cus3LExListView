<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:paddingLeft="24dp">

    <ImageView
        android:id="@+id/clean_acc_detail_third_icon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ac_third_delete" />

    <TextView
        android:id="@+id/clean_acc_detail_third_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/clean_acc_detail_third_icon"
        android:text="日志缓存" />

    <TextView
        android:id="@+id/clean_acc_detail_third_rubbish_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/clean_acc_detail_third_check_box"
        android:text="1.47M" />

    <CheckBox
        android:id="@+id/clean_acc_detail_third_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:layout_marginRight="20dp" />

</RelativeLayout>